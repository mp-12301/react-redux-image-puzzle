{
  "name": "react-redux-image-puzzle",
  "version": "0.0.1",
  "description": "Image puzzle game implemented in React + Redux",
  "main": "src/index.js",
  "scripts": {
    "start": "node server/server.js",
    "start:dashboard": "webpack-dashboard node server/server.js",
    "postinstall": "npm run build",
    "build": "webpack --config webpack/webpack.prod.config.js",
    "clean": "rm -rf build",
    "lint": "eslint src --ext .js*",
    "test": "jest",
    "test:watch": "npm test -- --watch"
  },
  "author": "Marcio Pereira <marcio.rivais@gmail.com>",
  "engines": {
    "node": "~8.1.4"
  },
  "license": "MIT",
  "dependencies": {
    "babel-core": "^6.24.0",
    "babel-loader": "^7.1.1",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "compression": "^1.7.0",
    "css-loader": "^0.28.0",
    "dotenv": "^4.0.0",
    "express": "^4.15.2",
    "extract-text-webpack-plugin": "^3.0.0",
    "html-webpack-plugin": "^2.29.0",
    "morgan": "^1.8.1",
    "postcss": "^6.0.8",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^10.0.0",
    "postcss-loader": "^2.0.5",
    "postcss-nested": "^2.1.0",
    "postcss-reporter": "^5.0.0",
    "postcss-url": "^7.1.1",
    "prop-types": "^15.5.10",
    "react": "^15.3.0",
    "react-dom": "^15.3.0",
    "react-hot-loader": "^3.0.0-beta.7",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0",
    "style-loader": "^0.18.2",
    "webpack": "^3.4.1"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "babel-jest": "^20.0.3",
    "enzyme": "^2.9.1",
    "eslint": "^4.4.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^20.0.4",
    "react-addons-test-utils": "^15.6.0",
    "react-test-renderer": "^15.6.1",
    "redux-mock-store": "^1.2.3",
    "webpack-dashboard": "^0.4.0",
    "webpack-dev-middleware": "^1.11.0",
    "webpack-dev-server": "^2.6.1",
    "webpack-hot-middleware": "^2.18.2"
  },
  "jest": {
    "testMatch": [
      "**/tests/**/*.js",
      "**/?(*.)(spec|test).js?(x)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "tests/setup.js",
      "tests/__mocks__/FileReader.js",
      "tests/__mocks__/Image.js"
    ],
    "setupFiles": [
      "./tests/setup"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "globals": {
      "window": true
    }
  },
  "optionalDependencies": {
    "fsevents": "*"
  }
}
